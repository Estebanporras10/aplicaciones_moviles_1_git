<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/content_image_main"
                android:layout_width="282dp"
                android:layout_height="246dp"
                android:src="@mipmap/andpersand" />


        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="128sp"
                android:layout_height="129sp"
                android:src="@mipmap/angular" />

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="128sp"
                android:layout_height="129sp"
                android:src="@mipmap/android" />

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="128sp"
                android:layout_height="129sp"
                android:src="@mipmap/cubo" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_4"
                android:layout_width="128sp"
                android:layout_height="129sp"
                android:src="@mipmap/jabali" />

            <ImageView
                android:id="@+id/image_5"
                android:layout_width="128sp"
                android:layout_height="128sp"
                android:src="@mipmap/bluetooh" />

            <ImageView
                android:id="@+id/image_6"
                android:layout_width="128sp"
                android:layout_height="128sp"
                android:src="@mipmap/dropbox" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_7"
                android:layout_width="128sp"
                android:layout_height="129sp"
                android:src="@mipmap/kraken" />

            <ImageView
                android:id="@+id/image_8"
                android:layout_width="128sp"
                android:layout_height="128sp"
                android:src="@mipmap/a500px" />

            <ImageView
                android:id="@+id/image_9"
                android:layout_width="128sp"
                android:layout_height="129sp"
                android:src="@mipmap/docker" />

        </TableRow>



    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

